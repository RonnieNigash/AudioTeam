	<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "org.melanesianwomentoday.mwt"
	version 	= "1.0.0">

	<name>Melanesian Women Today</name>

	<description>
		This is an app designed to help Melanesian Women empower themselves through education and entreprenuership. The app includes writing, and a podcast aimed at giving women valuable information. It also offers training on business topics needed to be successful in business.
	</description>

	<author href="http://www.melanesianwomentoday.org">
		Jason Sovick
	</author>
	
<!-- This is the icons for the app -->
	<icon src="icons/icon-iphone-57.png" width="57" height="57"/>
	<icon src="icons/icon-iphone-72.png" width="72" height="72"/>
	<icon src="icons/icon-iphone-114.png" width="114" height="114"/>


	<preference name="orientation" value="default" />
	<preference name="phonegap-version" value="2.3.0" />
	<preference name="target-device" value="universal" />

<!-- This is the splash screen -->
	<gap:splash src="icons/splash.png"/>
	<gap:splash src="icons/Default.png" width="320" height="480" />
	<gap:splash src="icons/Default_at_2x.png" width="640" height="960" />
	
	<!-- This is the permissions api which shows up in the this app requires when installed -->
	<preference name="permissions" value="none"/>
	
	
	
	<!-- to enable individual plugins use the following example -->
       <feature name="http://plugins.phonegap.com/ChildBrowser/2.0.0" /> 
       <plugin name="Media" value="org.apache.cordova.AudioHandler" />

<access origin="*" />  <!-- A wildcard - <access origin="*" /> - allows access to any external resource. -->
         


</widget>
